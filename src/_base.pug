		//Omniture Code
		include includes/omniture.html

		//BS Ad Code
		include includes/ads/ad-for-header.html

		//Prefetching gallery images
		- for (var i = 1; i <= 3; i++)
			link(rel="prefetch" href="")

	body(onload="init();")
		div#intro
			canvas(id="canvas", width="1000", height="600")
				p Be sure to enable JavaScript and use an updated browser to experience this presentation<br />
				img(src="dist/images/s2k-logo.png")
			div#_preload_div_(style="display: inline-block; height:100px; width: 100px; margin-top:100px;position:absolute;text-align: center;")
				span(style="display: inline-block; height: 100%; vertical-align: middle;")
				img(src="dist/images/_preloader.gif", style="vertical-align: middle; max-height: 100%;")
			button#open-button READ STORY
		nav#tophat.navbar.navbar-fixed-top.navbar-inverse
			div.container-fluid
				div.navbar-header
					button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#tophat-collapse" aria-expanded="false")
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					#logo
						a(href="http://www.baltimoresun.com")
							img(src="dist/images/baltimore-sun-logo-white.png")
					.tophat-share-tools
						span.icon-facebook
						span.icon-twitter

				div#tophat-collapse.collapse.navbar-collapse
					ul.nav.navbar-nav.navbar-right
						li.chapter
							a(href="#chapter-1")
								span Chapter 1
						li.chapter
							a(href="#chapter-2")
								span Chapter 2
						li.chapter
							a(href="#chapter-3")
								span Chapter 3
						li.chapter
							a(href="#chapter-4")
								span Chapter 4
						li.dropdown.chapter
							a(href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false") Series 
								div.caret
							ul.dropdown-menu
								li
									a(href="#") Title of the second story
								li
									a(href="#") Title of the third story

		//nav#tophat
			.group
				#logo
					a(href="http://www.baltimoresun.com")
						img(src="dist/images/baltimore-sun-logo-white.png")
				ul
					li.chapter
						a(href="#chapter-1")
							span Chapter 1
					li.chapter
						a(href="#chapter-2")
							span Chapter 2
					.tophat-share-tools
						span.icon-facebook
						span.icon-twitter

		//block for story layout
		block content

		include includes/ads/ad-for-body--leaderboard.html

		//footer
		footer.footer
			section.footer__credits
				ul.footer__credits--main
					li.label Reporting
					li Justin George
				ul
					li.label Editing
					li That person
				ul
					li.label Design
					li That other person
				ul
					li.label Photo
					li That other person
				ul
					li.label Development
					li That other person

			.footer__logo
				img(src="dist/images/baltimore-sun-logo-white.png" width="300")


		section.footer__comments
			include includes/comments.html




